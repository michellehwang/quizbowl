<!DOCTYPE HTML>
<html lang="en">
	<head>
		<title>Quizbowl DB</title>
    <script type="text/javascript" src="http://www.getbridge.com/js/bridge.min.js"></script>
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.7.2.min.js"></script>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8"> 
		<meta http-equiv="Content-Language" content="en-us">
    <script>
      window.fbAsyncInit = function() {
        FB.init({
          appId      : '378548848840009', // App ID
          status     : true, // check login status
          cookie     : true, // enable cookies to allow the server to access the session
          xfbml      : true, // parse XFBML
          oauth      : true
        });
        var bridge = new Bridge({apiKey:"08c83c72"});
        bridge.connect();
        var handler = 
          {
            onChat:function(user, message) {
              console.log(user, message);
            },
            onAnswer:function(user, message){
              console.log(user, message);
              console.log(user.name+" "+message);
            },
            onNewWord:function(word) {
              $('#text').append(word+" ");
            },
            onSystemBroadcast:function(message){
              console.log("SYSTEM: "+message);
            },
            onBuzz:function(user, message){
              console.log(user.name, "BUZZED IN");
            },
            onSit:function(user, team) {
              console.log(user.name+" sat on "+team);
            },
            onStartQuestion:function(){
              $("#text").html("");
            },
            onCompleteQuestion:function(question) {
              $('#text').html(question.question+"<br />ANSWER: "+question.answer);
            }
        };
        window.bridge = bridge;
        bridge.getService("quizbowl-auth",function(auth){
          var token = FB.getAccessToken();
          window.token = token
          console.log(auth);
          auth.login(token, function(user){
            window.user = user;
            bridge.getService('quizbowl-multiplayer', function(obj) {
              console.log(obj);
            obj.getRooms(function(rooms){
              console.log(rooms);
              var length = 0;
              var name = '';
              for (var i in rooms){
                name = i;
                length++;
              }
              if (length > 0) {
                rooms[name].join(user.id,
                  handler,
                  function(handler) {
                    window.handler = handler;
                  }
                );
              } else {
              obj.createRoom(user.id,{type:"team",maxOccupancy:10,teamLimit:5,numTeams:2,name:"team",difficulty:'HS',category:'Literature',numQuestions:20},function(o) {
                  room = o;
                  o.join(user.id,
                    handler,
                    function(handler) {
                      handler.sit(1,function(){});
                      room.start(user.id);
                      window.handler = handler;
                    }
                  );
                });
              }
            }); 
          });
          });
        });
      };

      // Load the SDK Asynchronously
      (function(d){
        var js, id = 'facebook-jssdk'; if (d.getElementById(id)) {return;}
        js = d.createElement('script'); js.id = id; js.async = true;
        js.src = "//connect.facebook.net/en_US/all.js";
        d.getElementsByTagName('head')[0].appendChild(js);
      }(document));
      $(document).ready(function(){
        $("#buzz").click(function(){
          window.handler.buzz();
        });
        $("#answer").keypress(function(event) {
          if ( event.which == 13 ) {
            window.handler.answer($("#answer").val(), function(right) {
              $("#response").val(right+"");
            });
            window.handler.answer($("#answer").val(), function(right) {
              $("#response").val(right+"");
            });
          }
        });
      });
    </script>
    <div id="fb-root"></div>
    <script>
    </script>
  </head>
